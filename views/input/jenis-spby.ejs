              <% if (jenisSpby.persetujuanPBJ) { %> <%= jenisSpby.persetujuanPBJ %>, <% } %>
              <% if (jenisSpby.spd) { %> <%= jenisSpby.spd %>, <% } %>
              <% if (jenisSpby.memoPerintahBayar) { %> <%= jenisSpby.memoPerintahBayar %>, <% } %>
