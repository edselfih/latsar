              <% if (jenisSpby.buktiPembayaranKKP) { %> <%= jenisSpby.buktiPembayaranKKP %>, <% } %>
              <% if (jenisSpby.absensi) { %> <%= jenisSpby.absensi %>, <% } %>
              <% if (jenisSpby.spj) { %> <%= jenisSpby.spj %>, <% } %>
              <% if (jenisSpby.rincianTransport) { %> <%= jenisSpby.rincianTransport %>, <% } %>
              <% if (jenisSpby.pajak.duaSatu ) { %> <%= jenisSpby.pajak.duaSatu  %>, <% } %>
