<% layout('layout/template.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 col-xl-6">
      <div class="row justify-content-center pb-6">
        <div class="card" style="width: auto">
          <div class="card-body">
            <h4 class="card-title text-center">Surat Perintah Bayar</h4>
          </div>
          <hr class="mb-3 mt-0" />

            <form action="/input/gup-tunai" class="needs-validation" method="POST">
              <div class="mb-3">
                <label for="jenis-spby" class="form-label">Jenis SPBy</label>
                <select class="form-select" id="jenis-spby" name="gupTunai[jenisSpby]" required>

                  <option selected value="" disabled>Pilih Jenis SPBy</option>

                  <% for (jenisSpby of jenisSpbys) { %>
                    <option value="<%= jenisSpby.jenisSPBy %>"><%= jenisSpby.jenisSPBy %></option>
                  <% } %>
                </select>
              </div>
              <div class="d-flex">
                <div class="mb-3" style="margin-right: 1em;">
                  <label for="nomor-spby" class="form-label">Nomor SPBy</label>
                  <input type="number" class="form-control" id="nomor-spby" placeholder="0" name="gupTunai[nomorSpby]" required/>
                </div>
                <div class="mb-3" style="margin-right: 1em;">
                  <label for="nomor-nd" class="form-label">Nomor ND</label>
                  <input type="number" class="form-control" id="nomor-nd" placeholder="0" name="gupTunai[nomorNd]"/>
                </div>
                <div class="mb-3" style="margin-right: 1em;">
                  <label for="nomor-st" class="form-label">Nomor ST</label>
                  <input type="number" class="form-control" id="nomor-st" placeholder="0" name="gupTunai[nomorSt]"/>
                </div>
              </div>
              <div class="mb-3">
                <label for="uraian" class="form-label">Uraian</label>
                <input type="text" class="form-control" id="uraian" name="gupTunai[uraian]"/>
              </div>
              <label for="rupiah" class="form-label">Jumlah</label>
              <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Rp</span>
                <input type="text" class="form-control rupiah" id="rupiah" placeholder="0" aria-describedby="basic-addon1" value="" name="gupTunai[jumlahSpby]" required>
              </div>
              <div class="mb-3">
                <label for="daftar-ppk" class="form-label">Pejabat Pembuat Komitmen</label>
                <select class="form-select" id="daftar-ppk" name="gupTunai[ppk]" required>
                  <option selected value="" disabled>Pilih PPK</option>
                  <% for (daftarPpk of daftarPpks) { %>
                    <option value="<%= daftarPpk.namaPpk %>"><%= daftarPpk.namaPpk %></option>
                  <% } %>  
                </select>
              </div>
              <div class="d-flex justify-content-end mb-3">
                <button type="submit" class="btn btn-success">Next</button>
              </div>
            </form>

        </div>
      </div>
