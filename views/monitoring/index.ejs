<div class="card text-center">
    <div class="card-body">
      <div class="tableFixHead">
        <table>
          <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">No Spby</th>
                <th scope="col">No ND</th>
                <th scope="col">No ST</th>
                <th scope="col">No Kw</th>
                <th scope="col">Jenis SPBy</th>
                <th scope="col">PPK</th>
                <th scope="col">Status</th>
                <th scope="col">Detail</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
                <% let nomor = 0 %> 
              
                <%for (inputedGup of inputedGups) {%>
                  <% nomor = nomor + 1 %>
                  <tr>
                      <th scope="row"><%= nomor %></th>
                      <td><%= inputedGup.nomorSpby %></td>
                      <td><%= inputedGup.nomorNd %></td>
                      <td><%= inputedGup.nomorSt %></td>
                      <% if (inputedGup.checked) { %>
                        <td><%= inputedGup.checked.nomorkwitansi %></td>
                      <% } else {%>
                        <td></td>
                      <% } %>  
                      <td><%= inputedGup.jenisSpby %></td>
                      <td><%= inputedGup.ppk %></td>
                      <td><%= inputedGup.kelengkapan %></td>
                      <td><a class="btn btn-warning" href='/monitoring/<%=inputedGup._id%>' role="button">Lihat</a></td>
                      <td><a class="btn btn-success" href='/input/gup-tunai/update/<%=inputedGup._id%>' role="button">Update</a></td>
                      <td>
                        <form action="/input/gup-tunai/<%=inputedGup._id%>?_method=delete" method="POST">
                          <button class="btn btn-danger" >Delete</button>
                        </form>
                      </td>
                  </tr>
              <% } %> 
            </tbody>
      </table>
      </div>

    </div>
</div>

<a href="/input/gup-tunai" class="mt-3 btn btn-light" role="button" >Input SPBy</a>

  

