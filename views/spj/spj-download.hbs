                        <td class="td" scope="col">Uang Harian </td>
                        <td class="td" scope="col">Penginapan </td>
                        <td class="td" scope="col">Translok Jakarta</td>
                        <td class="td" scope="col" style="max-width: 70px;" >Translok Tempat Tujuan </td>
                        <td class="td" scope="col">Biaya Lainnya </td>
                        <td class="td" scope="col" style="max-width: 70px;">Uang Representatif</td>
                        <td class="td" scope="col">Total</td>
                    </tr>
                </thead>
                <tbody class="align-middle text-center tbody">
                    <tr>
                        <td class="td" scope="col">1</td>
                        <td class="td" scope="col">{{nama}}</td>
                        <td class="td" scope="col">{{nip}}</td>
                        <td class="td" scope="col">{{tanggalJalan}}</td>
                        <td class="td" scope="col">s.d.</td>
                        <td class="td" scope="col">{{tanggalPulang}}</td>
                        <td class="td" scope="col">{{lamaPerjalanan}}</td>
                        <td class="td" scope="col">{{tiketPP}}</td>
                        <td class="td" scope="col">{{uangHarian}}</td>
                        <td class="td" scope="col">{{penginapan}}</td>
                        <td class="td" scope="col">{{translokJakarta}}</td>
                        <td class="td" scope="col">{{translokTempatTujuan}}</td>
                        <td class="td" scope="col">{{biayaLainnya}}</td>
                        <td class="td" scope="col">{{uangRepresentatif}}</td>
                        <td class="td" scope="col">{{total}}</td>
                        <td class="td" scope="col"></tr>
                    </tr>
                    <tr>
                        <td class="td" scope="col" colspan="7">Jumlah</td>
